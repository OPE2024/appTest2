<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragment.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="#5065A8">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:id="@+id/imageView_profile_dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/profileid"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_show_welcome"
                    android:layout_below="@+id/imageView_profile_dp"
                    android:hint="Loading..."
                    android:layout_centerHorizontal="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textColor="@color/white"/>

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="88dp"
                    android:layout_marginTop="78dp"
                    android:elevation="10dp"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="333dp"
                android:layout_margin="15dp"
                android:background="@color/white"
                android:padding="15dp">

                <ImageView
                    android:id="@+id/ic_profile"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/ic_profile" />

                <TextView
                    android:id="@+id/textView_show_full_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/ic_profile"
                    android:layout_marginStart="50dp"
                    android:hint="Loading"
                    android:textSize="18dp" />

                <View
                    android:id="@+id/divider_name"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/textView_show_full_name"
                    android:layout_marginTop="20dp"
                    android:background="@android:color/darker_gray" />


                <ImageView
                    android:id="@+id/ic_email"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_below="@+id/divider_name"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/ic_email" />

                <TextView
                    android:id="@+id/textView_show_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/divider_name"
                    android:layout_alignStart="@+id/ic_email"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="20dp"
                    android:hint="Loading"
                    android:textSize="18dp" />

                <View
                    android:id="@+id/divider_email"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/textView_show_email"
                    android:layout_marginTop="20dp"
                    android:background="@android:color/darker_gray" />


                <ImageView
                    android:id="@+id/ic_dob"
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:layout_below="@+id/divider_name"
                    android:layout_marginTop="80dp"
                    android:background="@drawable/ic_birthday" />

                <TextView
                    android:id="@+id/textView_show_dob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/divider_email"
                    android:layout_alignStart="@+id/ic_dob"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="20dp"
                    android:hint="Loading"
                    android:textSize="18dp" />

                <View
                    android:id="@+id/divider_dob"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/textView_show_dob"
                    android:layout_marginTop="20dp"
                    android:background="@android:color/darker_gray" />

                <ImageView
                    android:id="@+id/ic_gender"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_below="@+id/divider_dob"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/ic_gender" />

                <TextView
                    android:id="@+id/textView_show_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/divider_dob"
                    android:layout_alignStart="@+id/ic_gender"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="20dp"
                    android:hint="Loading"
                    android:textSize="18dp" />

                <View
                    android:id="@+id/divider_gender"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/textView_show_email"
                    android:layout_marginTop="20dp"
                    android:background="@android:color/darker_gray" />


                <ImageView
                    android:id="@+id/ic_college"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_below="@+id/divider_college"
                    android:layout_marginTop="19dp"
                    android:background="@drawable/ic_college" />

                <TextView
                    android:id="@+id/textView_show_college"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/divider_gender"
                    android:layout_alignStart="@+id/ic_college"
                    android:layout_marginStart="52dp"
                    android:layout_marginTop="141dp"
                    android:hint="Loading"
                    android:textSize="18dp" />

                <View
                    android:id="@+id/divider_college"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/textView_show_college"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="-44dp"
                    android:background="@android:color/darker_gray" />



            </RelativeLayout>



        </LinearLayout>



    </ScrollView>

</FrameLayout>